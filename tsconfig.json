{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "sourceMap": true
  },
  "exclude": [
    "./node_modules",
    "./src/**/*.tests.ts"
  ],
  "include": [
    "./src/index.ts"
  ]
}
